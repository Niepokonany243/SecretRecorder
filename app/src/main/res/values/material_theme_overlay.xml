<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design Theme Overlay to override default purple colors -->
    <style name="ThemeOverlay.SecretRecorder.MaterialComponents" parent="">
        <!-- Override default MaterialComponents colors with our teal/blue colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Override default MaterialComponents ripple colors -->
        <item name="colorControlHighlight">@color/surface_variant</item>
        
        <!-- Override default MaterialComponents component colors -->
        <item name="materialButtonStyle">@style/Widget.SecretRecorder.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.SecretRecorder.FloatingActionButton</item>
        <item name="materialCardViewStyle">@style/Widget.SecretRecorder.CardView</item>
        <item name="chipStyle">@style/Widget.SecretRecorder.Chip</item>
        <item name="sliderStyle">@style/Widget.SecretRecorder.Slider</item>
    </style>
    
    <!-- Custom button style -->
    <style name="Widget.SecretRecorder.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="rippleColor">@color/surface_variant</item>
    </style>
    
    <!-- Custom floating action button style -->
    <style name="Widget.SecretRecorder.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/on_primary</item>
        <item name="rippleColor">@color/surface_variant</item>
    </style>
    
    <!-- Custom card view style -->
    <style name="Widget.SecretRecorder.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="rippleColor">@color/surface_variant</item>
    </style>
    
    <!-- Custom chip style -->
    <style name="Widget.SecretRecorder.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="android:textColor">@color/on_surface_variant</item>
        <item name="rippleColor">@color/surface</item>
    </style>
    
    <!-- Custom slider style -->
    <style name="Widget.SecretRecorder.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/primary</item>
        <item name="trackColorActive">@color/primary</item>
        <item name="trackColorInactive">@color/surface_variant</item>
        <item name="haloColor">@color/primary_container</item>
    </style>
</resources>
