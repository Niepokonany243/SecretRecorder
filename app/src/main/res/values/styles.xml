<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme using Material3 theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/on_surface_variant</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorOutline">@color/outline</item>
        <item name="appBarLayoutStyle">@style/Widget.Material3.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="colorControlNormal">@color/on_surface</item>
    </style>

    <!-- NoActionBar theme for activities using a Toolbar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Settings activity theme -->
    <style name="AppTheme.Settings" parent="AppTheme">
        <!-- Additional customizations for settings -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <!-- Add PIN pad button styles to existing styles.xml -->
    <!-- Base PIN button style -->
    <style name="PinButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/pin_button_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <!-- Number buttons -->
    <style name="PinNumberButton" parent="PinButtonBase">
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/pinNumberBackgroundColor</item>
    </style>

    <!-- Action buttons (Clear, Delete) -->
    <style name="PinActionButton" parent="PinButtonBase">
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@color/pinActionBackgroundColor</item>
    </style>

    <style name="PinButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:background">@drawable/pin_button_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Add themes for PIN activity - Updated for consistent dark mode -->
    <style name="AppTheme.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_container_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_container_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_dark</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>
        <item name="colorOutline">@color/outline_dark</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:textColorPrimary">@color/on_surface_dark</item>
        <item name="android:textColorSecondary">@color/on_surface_variant_dark</item>
        <item name="android:textColorLink">@color/primary_dark</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@color/on_surface_dark</item>
        <item name="colorControlActivated">@color/primary_dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Legacy support -->
        <item name="colorPrimaryDark">@color/primary_container_dark</item>
        <item name="colorAccent">@color/secondary_dark</item>

        <!-- Custom styles -->
        <item name="toolbarStyle">@style/Toolbar.Dark</item>
        <item name="android:buttonStyle">@style/Button.Dark</item>
        <item name="chipTextAppearance">@style/ChipTextAppearance.Dark</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="chipTextAppearance">@style/ChipTextAppearance.Light</item>
        <item name="android:textColorLink">@color/on_surface</item>
    </style>

    <!-- PIN Entry Button Style -->
    <style name="Widget.SecretRecorder.PinButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/pinNumberBackgroundColor</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="rippleColor">@color/secondary_container</item>
    </style>

    <!-- PIN Action Button Style -->
    <style name="Widget.SecretRecorder.PinActionButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/pinActionBackgroundColor</item>
        <item name="android:textColor">@color/on_secondary_container</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <!-- Custom dark toolbar style - Updated for better contrast -->
    <style name="Toolbar.Dark" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_container_dark</item>
        <item name="titleTextColor">@color/on_primary_container_dark</item>
        <item name="subtitleTextColor">@color/on_primary_container_dark</item>
        <item name="colorControlNormal">@color/on_primary_container_dark</item>
        <item name="navigationIconTint">@color/on_primary_container_dark</item>
    </style>

    <!-- Custom dark button style - Updated for better visibility -->
    <style name="Button.Dark" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="rippleColor">@color/on_primary_dark</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Custom dark text appearance -->
    <style name="TextAppearance.Dark" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/on_surface_dark</item>
    </style>

    <style name="ChipTextAppearance.Light" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ChipTextAppearance.Dark" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SecretRecorder.RadioButton.Dark" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:buttonTint">@color/primary_dark</item>
    </style>

    <style name="Widget.SecretRecorder.TabLayout.Dark" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/on_surface_variant_dark</item>
        <item name="tabSelectedTextColor">@color/primary_dark</item>
        <item name="tabIndicatorColor">@color/primary_dark</item>
        <item name="tabRippleColor">@color/primary_dark</item>
        <item name="tabTextAppearance">@style/TextAppearance.SecretRecorder.Tab.Dark</item>
    </style>

    <style name="TextAppearance.SecretRecorder.Tab.Dark" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/on_surface_variant_dark</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>