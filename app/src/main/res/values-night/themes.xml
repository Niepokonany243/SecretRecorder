<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enhanced Dark Mode Theme - Improved for better aesthetics -->
    <style name="Theme.SecretRecorder" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_container_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_container_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_dark</item>

        <!-- Background and surface colors -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_dark</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:textColorPrimary">@color/on_surface_dark</item>
        <item name="android:textColorSecondary">@color/on_surface_variant_dark</item>
        <item name="android:editTextColor">@color/on_surface_dark</item>
        <item name="android:textColorHint">@color/on_surface_variant_dark</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@color/on_surface_dark</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorOutline">@color/outline_dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SecretRecorder.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SecretRecorder.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SecretRecorder.LargeComponent</item>
    </style>

    <!-- Updated theme for the video player that has no action bar and is fullscreen -->
    <style name="FullScreenNoTitleTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Window properties -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_container_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_container_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/on_surface_dark</item>
        <item name="android:textColorPrimary">@color/on_surface_dark</item>
        <item name="android:textColorSecondary">@color/on_surface_variant_dark</item>

        <!-- Legacy support -->
        <item name="colorPrimaryDark">@color/primary_container_dark</item>
        <item name="colorAccent">@color/secondary_dark</item>
    </style>
</resources>